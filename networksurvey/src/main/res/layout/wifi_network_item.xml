<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ssid"
            style="@style/ListTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/xx_small_margin"
            android:layout_marginEnd="@dimen/xx_small_margin"
            android:layout_marginBottom="@dimen/xx_small_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <TextView
            android:id="@+id/wifi_signal_strength"
            style="@style/ListTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/xx_small_margin"
            android:layout_marginEnd="@dimen/xx_small_margin"
            android:layout_marginBottom="@dimen/xx_small_margin"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="center"
            android:layout_gravity="center"
            app:alignItems="center"
            app:justifyContent="center"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/bssid"
                style="@style/ListContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_small_margin"
                android:text="" />

            <TextView
                android:id="@+id/wifi_standard"
                style="@style/ListContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_small_margin"
                android:paddingStart="@dimen/large_margin"
                android:text=""
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/encryption_type"
                style="@style/ListContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_small_margin"
                android:paddingStart="@dimen/large_margin"
                android:text=""
                tools:ignore="RtlSymmetry" />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="center"
            android:layout_gravity="center"
            app:alignItems="center"
            app:justifyContent="center"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/wifi_channel"
                style="@style/ListContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_small_margin"
                android:text="" />

            <TextView
                android:id="@+id/wifi_frequency"
                style="@style/ListContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_small_margin"
                android:paddingStart="@dimen/large_margin"
                android:text=""
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/wifi_bandwidth"
                style="@style/ListContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_small_margin"
                android:paddingStart="@dimen/large_margin"
                android:text=""
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/wifi_passpoint"
                style="@style/ListContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/xx_small_margin"
                android:paddingStart="@dimen/large_margin"
                android:text=""
                android:textColor="@color/colorAccent"
                tools:ignore="RtlSymmetry" />

        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/xx_small_margin">

        <TextView
            android:id="@+id/wifi_capabilities"
            style="@style/ListContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xx_small_margin"
            android:text="" />

    </LinearLayout>

</LinearLayout>
